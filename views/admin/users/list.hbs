<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Kullanıcı Yönetimi</h2>
    <a href="/admin/users/new" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i>
        Yeni Kullanıcı Ekle
    </a>
</div>

{{#if users.length}}
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Kullanıcı</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Departman</th>
                        <th>Son Giriş</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                    <i class="bi bi-person text-white"></i>
                                </div>
                                <div>
                                    <strong>{{this.firstName}} {{this.lastName}}</strong>
                                    {{#if this.title}}
                                    <br>
                                    <small class="text-muted">{{this.title}}</small>
                                    {{/if}}
                                </div>
                            </div>
                        </td>
                        <td>
                            {{this.email}}
                            {{#if this.phone}}
                            <br>
                            <small class="text-muted">{{this.phone}}</small>
                            {{/if}}
                        </td>
                        <td>
                            {{#if (eq this.role 'admin')}}
                            <span class="badge bg-danger">Admin</span>
                            {{else if (eq this.role 'manager')}}
                            <span class="badge bg-warning">Manager</span>
                            {{else}}
                            <span class="badge bg-info">User</span>
                            {{/if}}
                        </td>
                        <td>
                            {{#if this.department}}
                            {{this.department}}
                            {{else}}
                            <span class="text-muted">-</span>
                            {{/if}}
                        </td>
                        <td>
                            {{#if this.lastLogin}}
                            <small class="text-muted">{{formatDate this.lastLogin}}</small>
                            <br>
                            <small class="text-success">{{this.loginCount}} giriş</small>
                            {{else}}
                            <span class="text-muted">Hiç giriş yapmadı</span>
                            {{/if}}
                        </td>
                        <td>
                            {{#if this.isActive}}
                            <span class="badge bg-success">Aktif</span>
                            {{else}}
                            <span class="badge bg-danger">Pasif</span>
                            {{/if}}
                            {{#if this.lockoutUntil}}
                            <br>
                            <span class="badge bg-warning">Kilitli</span>
                            {{/if}}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-primary" 
                                        onclick="toggleStatus('/admin/api/users/{{this._id}}/toggle', this)">
                                    {{#if this.isActive}}
                                    <i class="bi bi-pause"></i>
                                    {{else}}
                                    <i class="bi bi-play"></i>
                                    {{/if}}
                                </button>
                                <a href="/admin/users/{{this._id}}/edit" class="btn btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {{#unless (eq this._id ../user._id)}}
                                <button type="button" class="btn btn-outline-danger" 
                                        onclick="confirmDelete('/admin/users/{{this._id}}')">
                                    <i class="bi bi-trash"></i>
                                </button>
                                {{/unless}}
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">{{users.length}}</h5>
                <p class="card-text text-muted">Toplam</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">{{countActive users}}</h5>
                <p class="card-text text-muted">Aktif</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">{{countAdminUsers users}}</h5>
                <p class="card-text text-muted">Admin</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">{{countManagerUsers users}}</h5>
                <p class="card-text text-muted">Manager</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">{{countRegularUsers users}}</h5>
                <p class="card-text text-muted">User</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">{{countWithLogin users}}</h5>
                <p class="card-text text-muted">Giriş Yapmış</p>
            </div>
        </div>
    </div>
</div>

{{else}}
<div class="card">
    <div class="card-body text-center py-5">
        <i class="bi bi-people fs-1 text-muted mb-3"></i>
        <h4>Henüz Kullanıcı Yok</h4>
        <p class="text-muted">İlk kullanıcıyı ekleyerek başlayın</p>
        <a href="/admin/users/new" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            İlk Kullanıcıyı Ekle
        </a>
    </div>
</div>
{{/if}}

<style>
.avatar-sm {
    width: 32px;
    height: 32px;
}
</style>

<script>
function confirmDelete(url) {
    if (confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = url + '/delete';
        document.body.appendChild(form);
        form.submit();
    }
}
</script>