{
  "info": {
    "_postman_id": "gold-server-api-v3",
    "name": "Gold Server API v3 - Complete",
    "description": "Gold Server API v3 - apiRoutes.js dosyasına göre güncellenmiş tam koleksiyon",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{api_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:6701",
      "type": "string"
    },
    {
      "key": "api_token",
      "value": "YOUR_TOKEN_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "System & Authentication",
      "item": [
        {
          "name": "Get API Info",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/info",
              "host": ["{{base_url}}"],
              "path": ["api", "info"]
            },
            "description": "API hakkında genel bilgi - Token gerektirmez"
          }
        },
        {
          "name": "Ping Health Check",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/ping",
              "host": ["{{base_url}}"],
              "path": ["api", "ping"]
            },
            "description": "Sunucu sağlık kontrolü - Token gerektirmez"
          }
        },
        {
          "name": "Validate Token",
          "request": {
            "method": "GET",
            "header": [],
