<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Yeni Currency Ekle</h2>
    <a href="/admin/currencies" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i>
        Geri Dön
    </a>
</div>

{{#if error}}
<div class="alert alert-danger" role="alert">
    <i class="bi bi-exclamation-triangle"></i>
    {{error}}
</div>
{{/if}}

<div class="card">
    <div class="card-body">
        <form method="POST" action="/admin/currencies">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="symbol" class="form-label">Symbol *</label>
                        <input type="text" class="form-control" id="symbol" name="symbol" 
                               value="{{formData.symbol}}" placeholder="USD/TRY" required>
                        <div class="form-text">Örnek: USD/TRY, EUR/TRY, HAS/TRY</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="code" class="form-label">Kod *</label>
                        <input type="text" class="form-control" id="code" name="code" 
                               value="{{formData.code}}" placeholder="USD" required>
                        <div class="form-text">Kısa kod (genellikle symbol'ün ilk kısmı)</div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="name" class="form-label">Ad *</label>
                        <input type="text" class="form-control" id="name" name="name" 
                               value="{{formData.name}}" placeholder="Amerikan Doları" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="type" class="form-label">Tip *</label>
                        <select class="form-select" id="type" name="type" required>
                            <option value="forex" {{#if (eq formData.type 'forex')}}selected{{/if}}>Forex</option>
                            <option value="gold" {{#if (eq formData.type 'gold')}}selected{{/if}}>Gold</option>
                            <option value="crypto" {{#if (eq formData.type 'crypto')}}selected{{/if}}>Crypto</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="baseCurrency" class="form-label">Base Currency *</label>
                        <input type="text" class="form-control" id="baseCurrency" name="baseCurrency" 
                               value="{{formData.baseCurrency}}" placeholder="USD" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="quoteCurrency" class="form-label">Quote Currency</label>
                        <input type="text" class="form-control" id="quoteCurrency" name="quoteCurrency" 
                               value="{{formData.quoteCurrency}}" placeholder="TRY" value="TRY">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="priority" class="form-label">Öncelik *</label>
                        <select class="form-select" id="priority" name="priority" required>
                            <option value="1" {{#if (eq formData.priority '1')}}selected{{/if}}>1 (En Yüksek)</option>
                            <option value="2" {{#if (eq formData.priority '2')}}selected{{/if}}>2 (Yüksek)</option>
                            <option value="3" {{#if (eq formData.priority '3')}}selected{{/if}}>3 (Normal)</option>
                            <option value="4" {{#if (eq formData.priority '4')}}selected{{/if}}>4 (Düşük)</option>
                            <option value="5" {{#if (eq formData.priority '5')}}selected{{/if}}>5 (En Düşük)</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label">Açıklama</label>
                <textarea class="form-control" id="description" name="description" rows="2">{{formData.description}}</textarea>
            </div>
            
            <hr>
            
            <h5>Veri Kaynakları</h5>
            <div class="mb-3">
                <label class="form-label">Bu currency için hangi kaynaklardan veri alınsın?</label>
                <div id="sourcesContainer">
                    {{#each sources}}
                    <div class="form-check">
                        <input class="form-check-input source-checkbox" type="checkbox" 
                               value="{{this.name}}" id="source_{{this.name}}" name="sources"
                               onchange="toggleSourceMapping('{{this.name}}')">
                        <label class="form-check-label" for="source_{{this.name}}">
                            {{this.displayName}} ({{this.name}})
                        </label>
                    </div>
                    
                    <div class="source-mapping ms-4 mb-3" id="mapping_{{this.name}}" style="display: none;">
                        <label for="sourceMapping_{{this.name}}" class="form-label">
                            <small>{{this.displayName}} için source field:</small>
                        </label>
                        <input type="text" class="form-control form-control-sm" 
                               id="sourceMapping_{{this.name}}" name="sourceMapping_{{this.name}}"
                               placeholder="Varsayılan: currency kodu kullanılır">
                        <div class="form-text">
                            <small>Özel mapping gerekiyorsa belirtin (örn: HH, USD, EUR)</small>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="isActive" name="isActive" checked>
                <label class="form-check-label" for="isActive">
                    Currency aktif olsun
                </label>
            </div>
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check"></i>
                    Currency Oluştur
                </button>
                <a href="/admin/currencies" class="btn btn-secondary">
                    <i class="bi bi-x"></i>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>

<script>
// Symbol otomatik oluşturma
document.getElementById('code').addEventListener('input', function() {
    const code = this.value.toUpperCase();
    const quoteCurrency = document.getElementById('quoteCurrency').value || 'TRY';
    const symbolField = document.getElementById('symbol');
    
    if (code && !symbolField.dataset.userModified) {
        symbolField.value = `${code}/${quoteCurrency}`;
    }
    
    // Base currency'yi de güncelle
    const baseCurrencyField = document.getElementById('baseCurrency');
    if (!baseCurrencyField.dataset.userModified) {
        baseCurrencyField.value = code;
    }
});

// Kullanıcı symbol'ü manuel değiştirirse otomatik güncellemeyi durdur
document.getElementById('symbol').addEventListener('input', function() {
    this.dataset.userModified = 'true';
});

document.getElementById('baseCurrency').addEventListener('input', function() {
    this.dataset.userModified = 'true';
});

// Quote currency değiştiğinde symbol'ü güncelle
document.getElementById('quoteCurrency').addEventListener('input', function() {
    const symbolField = document.getElementById('symbol');
    if (!symbolField.dataset.userModified) {
        const baseCurrency = document.getElementById('baseCurrency').value;
        if (baseCurrency) {
            symbolField.value = `${baseCurrency}/${this.value || 'TRY'}`;
        }
    }
});

function toggleSourceMapping(sourceName) {
    const checkbox = document.getElementById(`source_${sourceName}`);
    const mappingDiv = document.getElementById(`mapping_${sourceName}`);
    
    if (checkbox.checked) {
        mappingDiv.style.display = 'block';
    } else {
        mappingDiv.style.display = 'none';
        document.getElementById(`sourceMapping_${sourceName}`).value = '';
    }
}

// Form submit'te sources array'ini doğru şekilde gönder
document.querySelector('form').addEventListener('submit', function(e) {
    const checkedSources = document.querySelectorAll('.source-checkbox:checked');
    
    // Önce mevcut hidden input'ları temizle
    document.querySelectorAll('input[name="sources"]').forEach(input => {
        if (input.type === 'hidden') {
            input.remove();
        }
    });
    
    // Checked source'lar için hidden input'lar oluştur
    checkedSources.forEach(checkbox => {
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'sources';
        hiddenInput.value = checkbox.value;
        this.appendChild(hiddenInput);
        
        // Checkbox'ı disable et ki duplicate gönderim olmasın
        checkbox.disabled = true;
    });
});
</script>