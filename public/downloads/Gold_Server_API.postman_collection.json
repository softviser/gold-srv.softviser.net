              "host": ["{{base_url}}"],
              "path": ["api", "prices", "current"],
              "query": [
                {
                  "key": "source",
                  "value": "altinkaynak",
                  "description": "Kaynak filtresi"
                },
                {
                  "key": "symbol",
                  "value": "HAS/TRY",
                  "description": "Sembol filtresi"
