    {
      "name": "Current Prices",
      "item": [
        {
          "name": "Get All Current Prices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/prices/current",
              "host": ["{{base_url}}"],
              "path": ["api", "prices", "current"]
            },
            "description": "Tüm kaynaklardan güncel fiyatları getirir"
          }
        },
        {
          "name": "Get Prices by Source - AltınKaynak",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/prices/current?source=altinkaynak",
              "host": ["{{base_url}}"],
              "path": ["api", "prices", "current"],
              "query": [
                {
                  "key": "source",
                  "value": "altinkaynak",
                  "description": "Kaynak filtresi"
                }
              ]
            },
            "description": "Sadece AltınKaynak'tan güncel fiyatları getirir"
          }
